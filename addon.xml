<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.animexplore" name="AnimeXplore" version="1.0.0" provider-name="SoyHugo">
  <requires>
    <import addon="xbmc.python"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="es_es">AnimeXplore: Addon para Kodi que conecta con servidores de anime para ver contenido gratis, sin anuncios ni distracciones, en un entorno limpio y fluido.</summary>
    <description lang="es_es">¡Descubre AnimeXplore, el addon definitivo para los amantes del anime! AnimeXplore conecta tu Kodi directamente a múltiples servidores de streaming de anime para disfrutar de tus series y películas favoritas gratis, sin anuncios y sin distracciones.</description>
    <disclaimer lang="es_es"></disclaimer>
    <language>es</language> 
    <platform>all</platform>
    <license>GPL-3.0</license>
    <!-- <forum>https://forum.kodi.tv/showthread.php?tid=xxxx</forum> -->
    <website>https://animexplore.soyhugo.es</website>
    <email>info@soyhugo.es</email>
    <!-- <source>http://github.com/you/plugin.addon.id</source> -->
    <news>v1.0.0 (09/12/2024)
      [new] Addon created.
    </news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
        <banner></banner>
        <clearlogo>resources/clearlogo.png</clearlogo>
        <screenshot></screenshot>
    </assets>
  </extension>
</addon>